<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:titleTextStyle">@style/AppTheme.ActionBar.Text</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="android:titleTextStyle">@style/myTheme.ActionBar.Text</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="btn_green">
        <item name="android:textSize">
            12sp
        </item>
        <item name="android:textColor">
            #FFFFFF
        </item>
        <item name="android:layout_marginBottom">
            5pt
        </item>
    </style>
    <style name="AppTheme.ActionBar">
        <item name="android:titleTextStyle">@style/AppTheme.ActionBar.Text</item>
    </style>

    <style name="AppTheme.ActionBar.Text">
        <item name="android:textColor">#32CD32</item>
    </style>
    <style name="ThemeSelector" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/myTheme.ActionBar</item>
    </style>

    <style name="myTheme.ActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">#FFFF</item>
        <item name="android:titleTextStyle">@style/myTheme.ActionBar.Text</item>
        <item name="android:height">15pt</item>
    </style>

    <style name="myTheme.ActionBar.Text" parent="@android:style/TextAppearance">
        <item name="android:textColor">#32CD32</item>
        <item name="android:textSize">12pt</item>
    </style>
</resources>
